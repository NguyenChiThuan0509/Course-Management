  <body>
    <div class="container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto" style="border-bottom: #3081d0 1px solid">
        <div>
          <h3 class="float-md-start mb-0 text-dark">
            <a href="/" class="text-dark text-decoration-none"
              >Quản Lý Học Phần</a
            >
          </h3>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <form action="/logout?_method=DELETE" method="POST">
              <button
                class="nav-link fw-bold py-1.5 px-0.5 btn p=3 text-white btn-primary"
                type="submit"
              >
                Logout
              </button>
            </form>
          </nav>
          <ul class="nav nav-masthead justify-content-center">
            <li class="nav-item">
              <a class="nav-link text-dark" href="/hocphan">Học Phần</a>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link text-dark" href="/hocphan/create"
                >Thêm Học Phần</a
              >
            </li> -->
            <li class="nav-item">
              <a class="nav-link text-dark" href="/dkhocphan"
                >Học Phần Đăng Ký</a
              >
            </li>
            <!-- <li class="nav-item">
                    <a class="nav-link text-dark" href="/lichhoc">Lịch Học</a>
                </li> -->
          </ul>
        </div>
      </header>
      <!--Form Lọc Theo Ngày Học -->
      <form action="/filter" method="GET" class="mb-3 mt-5">
        <div class="input-group mb-3">
          <label for="ngayhoc" class="input-group-text">Ngày Học</label>
          <input type="date" class="form-control" name="ngayhoc" id="ngayhoc" />
          <button type="submit" class="btn btn-primary">Lọc</button>
        </div>
      </form>
      <!-- ============================ Đăng Ký Học Phần ============================= -->
      <div class="mt-5">
        <div class="row">
          <h2>Danh sách các khóa học đã đăng ký</h2>
          <% registeredCourses.forEach(course => { %>
          <div class="mt-2 col-sm-6 col-lg-4 my-card">
            <div class="card h-100">
              <a href="/hocphan/<%= course.slug %>">
                <div
                  class="image-container"
                  style="max-width: 100%; max-height: 250px; overflow: hidden"
                >
                  <img
                    src="/uploads/<%= course.image %>"
                    class="card-img-top"
                    alt="Course Image"
                    style="width: 100%; height: auto"
                  />
                </div>
              </a>
              <div class="card-body">
                <h5 class="card-title"><strong><%= course.name %></strong></h5>
                <p class="card-text">Mã HP: <%= course.mshp %></p>
                <p class="card-text">Số TC: <%= course.sotc %></p>
                <p class="card-text">Ngày Học: <%= course.ngayhoc %></p>
                <p class="card-text">Mô tả: <%= course.description %></p>
                <p class="card-text">Khoa: <%= course.khoa %></p>
                <!-- Các nút hoặc chức năng khác có thể thêm ở đây -->
                <form
                  id="deleteForm<%= course.slug %>"
                  action="/dkhocphan/delete/<%= course.slug %>"
                  method="POST"
                  style="margin-bottom: 3px; display: inline-block"
                >
                  <button
                    type="button"
                    class="btn btn-danger"
                    onclick="deleteCourse('<%= course.slug %>')"
                  >
                    Hủy Đăng Ký
                  </button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <div class="modal" tabindex="-1" role="dialog" id="deleteModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Xác nhận Hủy</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <p>Bạn có chắc chắn muốn xoá khóa học này không?</p>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Hủy
              </button>
              <button
                type="button"
                class="btn btn-danger"
                onclick="confirmDelete()"
              >
                Xác nhận Hủy
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      function deleteCourse(slug) {
        // Hiển thị modal xác nhận xóa
        var myModal = new bootstrap.Modal(
          document.getElementById("deleteModal")
        );
        myModal.show();

        // Lưu slug của khóa học cần xoá vào biến toàn cục
        window.courseToDeleteSlug = slug;
      }

      function confirmDelete() {
        // Gửi yêu cầu POST đến server để xóa khóa học
        fetch(`/dkhocphan/delete/${window.courseToDeleteSlug}`, {
          method: "POST",
        })
          .then((response) => response.json())
          .then((data) => {
            // Đóng modal xác nhận xóa
            var myModal = new bootstrap.Modal(
              document.getElementById("deleteModal")
            );
            myModal.hide();

            // Cập nhật trang
            window.location.reload();
          })
          .catch((error) => {
            console.error("Lỗi khi xóa khóa học:", error);
          });
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
